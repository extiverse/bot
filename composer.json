{
    "name": "discodian/discodian",
    "description": "The Discord bot toolkit for modern php",
    "type": "project",
    "license": "MIT",
    "keywords": ["discord", "bot"],
    "authors": [
        {
            "name": "DaniÃ«l Klabbers",
            "email": "daniel@klabbers.email",
            "homepage": "https://luceos.com"
        }
    ],
    "require": {
        "discodian/core": "^0.1.0@beta",
        "discodian/ext-sentry": "*",
        "flagrow/discodian-extension": "@dev",
        "flagrow/flarum-api-client": "^0.2.0@beta",
        "symfony/process": "^4.0"
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": {
        "search": {
            "type": "path",
            "url": "extensions/search"
        }
    }
}
